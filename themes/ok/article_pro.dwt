<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta http-equiv="X-UA-Compatible" content="IE=EmulateIE7" />
<meta name="Keywords" content="{$keywords}" />
<meta name="Description" content="{$description}" />
<title>{$page_title}</title>
<link rel="shortcut icon" href="favicon.ico" />
<link href="/themes/ok/style.css" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="/js/jquery1.10.js"></script>
</head>
<body>
<!-- #BeginLibraryItem "/library/page_header.lbi" --><!-- #EndLibraryItem -->

<div class="block_2 clearfix">
    <div style="height:45px; background-image:url(/themes/ok/images/index_mb_tt_xw.gif);background-position:center; background-repeat:no-repeat;padding-left:30px; font-size:14px; line-height:45px;">
        <strong>帮助中心</strong>
    </div>
    <div style="min-height:650px;_height:45px; background-image:url(/themes/ok/images/index_mb_mid.gif);background-position:center; background-repeat:repeat-y; ">
        <div style=" padding-left:5px; padding-right:5px; padding-top:5px;">
        <div class="friend_linkbox">
        <div class="main cc nosidebar">
            <div class="page-wrapper">
                <ul class="page-menus">
                    <li><a href="/page/about">关于我们</a></li>
                    <li><a href="/page/contact">联系我们</a></li>
                    <li><a href="/page/links">友情链接</a></li>
                    <li><a href="/page/sitemap">网站地图</a></li>
                    <li><a href="/page/joinus">加入我们</a></li>
                    <li><a href="/page/agreement">购买须知</a></li>
                </ul>
                <div class="page-wrap">
                    <h3 class="page-title">{$article.title|escape:html}</h3>
                    <div class="page-content">
                        {$article.content}
                    </div>


                </div>
            </div>
        </div>
    </div>
    </div>
    </div>

    </div>
    <div style="height:15px; background-image:url(/themes/ok/images/index_mb_bb.gif);background-position:center; background-repeat:no-repeat;float:left; width:100%"></div>
    </div>
</div>
<div class="blank"></div>
<!--.main-wrap,#main End-->

<!-- #BeginLibraryItem "/library/page_footer.lbi" --><!-- #EndLibraryItem -->
<script type="text/javascript">
    url = location.href.toLowerCase();
    switch (true) {
        case url.indexOf("about") > 0 :
            $(".page-menus li").attr("class","");
            $(".page-menus li:eq(0)").attr("class","active");
            break;
        case url.indexOf("contact") > 0 :
            $(".page-menus li").attr("class","");
            $(".page-menus li:eq(1)").attr("class","active");
            break;
        case url.indexOf("links") > 0 :
            $(".page-menus li").attr("class","");
            $(".page-menus li:eq(2)").attr("class","active");
            break;
        case url.indexOf("sitemap") > 0 :
            $(".page-menus li").attr("class","");
            $(".page-menus li:eq(3)").attr("class","active");
            break;
        case url.indexOf("joinus") > 0 :
            $(".page-menus li").attr("class","");
            $(".page-menus li:eq(4)").attr("class","active");
            break;
        case url.indexOf("agreement") > 0 :
            $(".nav-list li").attr("class","");
            $(".page-menus li:eq(5)").attr("class","active");
            break;
    }

</script>
</body>
</html>
